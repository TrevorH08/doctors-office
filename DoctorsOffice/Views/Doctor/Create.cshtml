@{
  Layout = "_Layout";
}

@model DoctorsOffice.Models.Doctor


<h4>Add a New Doctor</h4>

@using (Html.BeginForm())
{
    @Html.Display("Doctor Name:")
    @Html.TextBoxFor(model => model.DoctorName)
    @Html.Display("Specialty Area:")
    @Html.EditorFor(model => model.Speciality)

    <input type="submit" value="Add new Doctor" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Doctors", "Index")</p>